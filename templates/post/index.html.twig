{% extends 'base.html.twig' %}

{% block title %}Hello CommunityController!{% endblock %}

{% block body %}
    <section class='post-wall-container'>
        <div class='post-wall-head' id="drop-down">
            <h1>Votre communaut√©</h1>
            <div class='post-create'>
                <h2>Quoi de neuf ?</h2>
                <input type='text'>
            </div>
            <li class="fas fa-chevron-down"></li>
        </div>

        {% if app.user %}
            {{ form_start(postForm, {'attr': {'class': 'form-post'}}) }}

            {{ form_row(postForm.message, {'label': app.user.username}) }}

            <button type='submit'>Partager</button>

            {{ form_end(postForm) }}
        {% endif %}

        {% for post in posts %}
            <div class='post-wall'>

                <div class="post">
                    <p class='author'><i class="fas fa-user-circle"></i> {{ post.user.username }}</p>
                    <p class='content'>{{ post.message }}</p>
                </div>
            </div>

            {% if app.user == post.user %}
                {% include "post/_delete_form.html.twig" %}
                {% include "post/_edit_form.html.twig" %}
            {% endif %}
        {% endfor %}
    </section>
{% endblock %}
