{% extends 'base.html.twig' %}

{% block body %}
<div class="profile">
    <div class="profile-info">
        <div class="profile-head">
            <h2>Profil</h2>
            <a class="link" href={{ path('app_logout') }}><i class="fas fa-sign-out-alt"></i></a>
        </div>
        {{ render(controller('App\\Controller\\UserController::show', {user: user})) }}
    </div>
    <div class="profile-garbage">
        {{ render(controller('App\\Controller\\AddressController::showGarbages', {address: user.address, limit: limit})) }}
        {% if app.user is same as(user) %}
            <a href="{{ path('address_garbage', {id: user.address.id}) }}" class="see-more-garbage">Voir plus</a>
        {% endif %}
    </div>
</div>
{% endblock %}
