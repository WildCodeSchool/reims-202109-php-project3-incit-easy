<section>
    {% set user = (garbages|last).user %}
    {% if app.user == user %}
    <ul>
    {% for garbage in garbages|reverse %}
        {% set total_garbage = garbage.nonRecycledWaste + garbage.recycledWaste %}
        <li>
            <a href="{{ path("garbage_show", {id: garbage.getId}) }}">
                {{ garbage.getCreatedAt|date("m/d/Y") }} -
                {{ total_garbage }} kg -
                {% if total_garbage < 7 %}
                <i class="fas fa-smile-beam"></i>
                {% elseif total_garbage < 12 %}
                <i class="fas fa-meh"></i>
                {% else %}
                <i class="fas fa-frown"></i>
                {% endif %}
            </a>
        </li>
    {% endfor %}
    </ul>
    {% endif %}
</section>